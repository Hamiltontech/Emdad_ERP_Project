<?xml version="1.0" encoding="utf-8"?>
<emdad>
    <record id="emdad_customers_view_form" model="ir.ui.view">
        <field name="name">emdad_customers.view.form</field>
        <field name="model">emdad.customers</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                <div class="oe_title">
                    <h1>
                        <field name="name"/>
                    </h1>
                </div>
                    <group string="Subscription Information">
                        <group>
                            <field name="server_ip"/>
                            <field name="port_number"/>
                            <field name="server_status"/>
                        </group>
                        <group>
                            <field name="company"/>
                            <field name="paid"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record model="ir.actions.act_window" id="emdad_servers_windows">
        <field name="name">Emdad Servers</field>
        <field name="res_model">emdad.customers</field>
        <field name="view_mode">kanban,form</field>
        <field name="domain">[]</field>
    </record>
    <menuitem
        id="emdad_customers_menu"
        name="Emdad Servers"
        sequence="10"/>
        <menuitem
            id="emdad_customers_list_menu"
            name="Customers"
            action="emdad_servers_windows"
            parent="emdad_customers_menu"
            sequence="10"/>

</emdad>
