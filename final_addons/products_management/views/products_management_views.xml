<?xml version="1.0" encoding="utf-8"?>
<emdad>
    <record id="view_products_management_form" model="ir.ui.view">
        <field name="name">products.management.view.form</field>
        <field name="model">product.management</field>
        <field name="arch" type="xml">
            <form class="o_sale_order">
            <sheet>
            <field name="product_image" widget='image' class="oe_left oe_avatar"/>
            <div class="oe_title">
            <strong>Product Name</strong>
                <h1>
                    <field name="name" required="1"/>
                </h1>
            </div>
            <div class="container" >
            <div class="row" style=" border: 1px solid #ed6343">
                <div class="col mr-5" style="background: #faf0e6; padding: 10px;">
                    <center>
                    <h3>
                        <strong>Available</strong><br></br>
                        <field name="quants"/> <field name="selling_metric" readonly="1"/>
                   </h3>
                    </center>
                </div>
                <div class="col mr-5" style="background: #faf0e6; padding: 10px;">
                    <center>
                    <h3>
                        <strong>Sold</strong><br></br>
                        <field name="total_sales_count"/> <field name="selling_metric" readonly="1"/>
                    </h3>
                    </center>
                </div>
                <div class="col" style="background: #faf0e6; padding: 10px;">
                    <center>
                    <h3>
                        <strong>Bought</strong><br></br>
                        <field name="total_procurement_count"/> <field name="selling_metric" readonly="1"/>
                    </h3>
                    </center>
                </div>
                </div>
            </div>
            <group name="product_detals" string="Product Information">
                <group name="product_fixed_info" string="Products Reference">
                    <field name="name_ar" required="1"/>
                    <field name="barcode" required="1"/>
                    <field name="emdad_reference" required="1"/>
                    <field name="selling_price" required="1"/>
                    <field name="is_expiary" required="1"/>
                    <field name="is_kit" required="1"/>
                    <field name="category" required="1"/>
                    <field name="active_product" required="1"/>
                    <field name="product_origin" required="1"/>
                    <field name="quants"/>
                </group>
                <group name="other_information" string="Product Relations">
                        <field name="product_image"/>
                        <field name="description" required="1"/>
                        <field name="selling_metric" domain="[('metric', '=', related_metric)]" required="1"/>
                        <field name="purchase_metric" domain="[('metric', '=', related_metric)]" required="1"/>
                        <field name="related_metric"/>
                        <field name="related_company" widget="many2many_tags" required="1"/>                    
                </group>
                
            </group>
            <notebook>
                <page name="pricing" string="Product Pricing">
                    <field name="products_pricing" widget="one2many_list" context="{'default_related_product': id}" required="1">
                        <tree editable="bottom">
                            <field name="related_product" optional="hidden" required="1"/>
                            <field name="name" required="1"/>
                            <field name="min_qty" required="1"/>
                            <field name="max_qty" required="1"/>
                            <field name="related_unit" required="1"/>
                            <field name="start_date" required="1"/>
                            <field name="end_date" required="1"/>
                            <field name="price" required="1"/>
                            <field name="status" widget="badge" required="1"/>
                        </tree>
                    </field>
                </page>
                <!-- <page name="contains" string="Components" invisible="'is_kit' != True">
                <field name="contains"/>
                </page> -->
            </notebook>
                    
                    </sheet>
            </form>
        </field>
    </record> 
     <record model="ir.actions.act_window" id="products_management_windows">
    <field name="name">Products Management</field>
    <field name="res_model">product.management</field>
    <field name="view_mode">kanban,form</field>
    <field name="domain">[]</field>
   </record>
   <record id="products_management_view_kanban" model="ir.ui.view">
    <field name="name">products_management.view.kanban</field>
    <field name="model">product.management</field>
    <field name="arch" type="xml">
       
        <kanban>
                              <t t-name="kanban-box">
                               <div t-attf-class="oe_kanban_global_click">
                                <t t-name="kanban-box">
                                    <div t-attf-class="oe_kanban_global_click">
                                        <div class="o_kanban_image">
                                            <img t-att-src="kanban_image('product.management', 'product_image', record.id.raw_value)" alt="Book"
                                                class="o_image_128_contain"/>
                                        </div>
                                        <div class="oe_kanban_details">
                                            <strong class="o_kanban_record_title">
                                            <field name="name"/>
                                            <br></br>
                                            </strong>
                                            <field name="category"/>
                                            <br></br>
                                            <hr></hr>
                                                <i class="fa fa-bar-chart"/> Sold 
                                                <field name="total_sales_count"/>  <field name="selling_metric"/><br></br>
                                                <i class="fa f fa-truck"/> Bought
                                                <field name="total_procurement_count"/>  <field name="selling_metric"/><br></br> <i class="fa f  fa-archive"/> Available
                                                <field name="quants"/> <field name="selling_metric"/> <br></br>
                                        </div>
                                    </div>
                                </t>
                                </div>
                                </t>
                            </kanban>
    </field>
</record>
<record id="product_units_view_form" model="ir.ui.view">
    <field name="name">product_units.view.form</field>
    <field name="model">product.units</field>
    <field name="arch" type="xml">
        <form string="">
            <sheet>
                <div class="oe_title">
                    <h1>
                        <field name="name"/>
                    </h1>
                </div>
                <group string="Unit Settings">
                    <group>
                        <field name="short" required="1"/>
                        <field name="name_ar" required="1"/>
                        <field name="reference" required="1"/>
                        <field name="metric" required="1"/>
                        <field name="ref_main" required="1"/>
                    </group>
                    <group>
                        <field name="product_count"/>
                    </group>
                    
                </group>
            </sheet>
        </form>
    </field>
</record>
