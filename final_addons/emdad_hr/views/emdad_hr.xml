<?xml version="1.0" encoding="utf-8"?>
<emdad>
<!-- form     -->
<record id="emdad_hr_view_form" model="ir.ui.view">
    <field name="name" >emdad_hr.view.form</field>
    <field name="model">emdad.hr</field>
    <field name="arch" type="xml">
        <form string="">
        <header>
            <button string="Deactivate Employee" name="status_inactive" type="object" invisible="status == 'not'"/>
            <button string="Activate Employee" name="status_active" type="object" invisible="status == 'active'"/>
        </header>
            <sheet>
            <field name="status" widget="badge"/>
            <div class="oe_title">
            <h1>
                <field name="name" required="1"/>
            </h1>
            </div>
                <group string="Definitions">
                <group name="name" >
<field name="image" widget="image" options="{'size': (150, 150)}"/>
                    
                </group>
                <group name="name">
                    <field name="emp_id"/>
                     <field name="emdad_id"/>
                     <field name="related_company"/>
                </group> 
                </group>
                <group name="basic" string="Basic Information">
                    <group string="Communication">
                        <field name="phone" widget="phone" required="1"/>
                        <field name="personal_email" widget="email" required="1"/>
                        <field name="emdad_user" widget="selection_create" context="{'default_login' : personal_email, 'default_name' : name, 'default_mobile': phone}"/>
                    </group>
                    <group string="Address">
                        <field name="building"/>
                        <field name="street"/>
                        <field name="city"/>
                        <field name="country"/>
                    </group>
                </group>
                <group>
                    <group name="name" string="Personal">
                        <field name="dob"/>
                        <field name="age"/>
                        <field name="id_type"/>
                        <field name="document_id"/>
                        <field name="document"/>
                        <field name="expiary"/>
                        <field name="nationality"/>
                        <field name="gosi_number"/>
                        <field name="gosi_issue"/>
                        <field name="doc_status" widget="badge"/>
                    </group>
                    <group name="name" string="Work">
                        <field name="active_contract"/>
                        <field name="position"/>
                        <field name="department"/>
                        <field name="manager"/>
                        <field name="end_date"/>
                        <field name="years"/>
                        <field name="status"/>
                        <field name="salary"/>
                        <field name="cv"/>
                    </group>
                </group> 
                <notebook>
                    <page name="education" string="Education Profile">
                        <field name="education" widget="one2many_list">
                            <tree editable="bottom">
                                <field name="major"/>
                                <field name="school"/>
                                <field name="country"/>
                                <field name="graduation_year"/>
                                <field name="certificate"/>
                            </tree>
                        </field>
                    </page>
                    <page name="work" string="Work History">
                        <field name="work" widget="one2many_list">
                            <tree editable="bottom">
                                <field name="name"/>
                                <field name="from_date"/>
                                <field name="till_date"/>
                                <field name="departure_reason"/>
                                <field name="position"/>
                                <field name="salary"/>
                                <field name="experience_years"/>
                            </tree>
                        </field>
                    </page>
                    <page name="work" string="Contracts">
                        <field name="contracts" widget="one2many_list">
                            <tree>
                                <field name="name"/>
                                <field name="start_date"/>
                                <field name="end_date"/>
                                <field name="job"/>
                                <field name="status"/>
                            </tree>
                        </field>
                    </page>
            </notebook>

            </sheet>
        </form>
    </field>
</record>
<record id="emdad_hr_department_view_form" model="ir.ui.view">
    <field name="name">emdad_hr_department.view.form</field>
    <field name="model">emdad.hr.department</field>
    <field name="arch" type="xml">
        <form string="">
            <sheet>
            <div class="oe_title">
            <h1>
                <field name="name"/>
            </h1>
            </div>
                <group string="Department Information">
                <field name="parent_department"/>
                <field name="manager"/>
                </group>
                <field name="employees"/>
            </sheet>
        </form>
    </field>
</record>
<record id="emdad_hr_contract_view_form" model="ir.ui.view">
    <field name="name">emdad_hr_contract.view.form</field>
    <field name="model">emdad.hr.contract</field>
    <field name="arch" type="xml">
        <form string="">
            <sheet>
            <header>
                <field name="status" widget="badge"/>
            </header>
            <div class="oe_title">
                <h1>   
                    <field name="name"/>
                </h1>
            </div>
                <group string="Contract Information">
                <group>
                    <field name="start_date"/>
                    <field name="end_date"/>
                    <field name="related_employee"/>
                    <field name="over_time"/>
                    <field name="bank" context="{'default_related_contract': id}"/>
                    <field name="related_company"/>
                    <field name="emdad_user"/>
                    </group>
                    <group>
                    <field name="contract_type"/>
                    <field name="job"/>
                    <field name="related_department"/>
                    <field name="related_manager"/>
                    <field name="total_salary"/>
                    <field name="total_hours"/>
                </group>
                </group>
               
                <notebook>
                    <page name="salary_list" string="Salary Structure">
                        <field name="salary" widget="one2many_list">
                            <tree>
                                <field name="name"/>
                                <field name="structure"/>
                                <field name="amount"/>
                            </tree>
                        </field>
                    </page>
                    <page name="work_list" string="Working Hours">
                        <field name="work_days" widget="one2many_list">
                            <tree editable="bottom">
                                <field name="name"/>
                                <field name="day"/>
                                <field name="start" widget="float_time"/>
                                <field name="break_time" widget="float_time"/>
                                <field name="end" widget="float_time"/>
                                <field name="working_hours"/>
                            </tree>
                        </field>
                    </page>
                    <page name="work_rules" string="Emdad Rules">
                        <field name="rules" widget="one2many_list">
                            <tree editable="bottom">
                                <field name="app"/>
                                <field name="view"/>
                                <field name="read_app"/>
                                <field name="write"/>
                                <field name="edit"/>
                            </tree>
                        </field>
                    </page>
                    <page name="descriptiopn" string="Job Description">
                       <field name="description"/>
                    </page>
                </notebook>
                
            </sheet>
        </form>
    </field>
</record>
<record id="emdad_hr_salary_view_form" model="ir.ui.view">
    <field name="name">emdad_hr_salary.view.form</field>
    <field name="model">emdad.hr.salary</field>
    <field name="arch" type="xml">
        <form string="">
            <sheet>
            <div class="oe_title">
            <h1>
                <field name="name"/>
            </h1>
            </div>
                <group string="Salary Structure Information">
                    <group>
                        <field name="structure"/>
                        <field name="deduction" invisible="structure != 'deduction'"/>
                        <field name="attendance"/>
                        <field name="amount"/>
                    </group>
                    <group>
                        <field name="related_contract"/>
                        <field name="related_employee"/>
                    </group>
                    
                </group>
            </sheet>
        </form>
    </field>
</record>
<record id="emdad_hr_attendance_view_form" model="ir.ui.view">
    <field name="name">emdad_hr_attendance.view.form</field>
    <field name="model">emdad.hr.attendance</field>
    <field name="arch" type="xml">
        <form string="">
            <sheet>
            <button string="Log Checkin" type="object" class="oe_highlight" name="record_checkin"/>
            <button string="Log Checkout" type="object" class="oe_highlight" name="record_checkout"/>

                <group>
                    <field name="name"/>
                    <field name="related_employee"/>
                    <field name="related_contract"/>
                    <field name="checkin"/>
                    <field name="checkout"/>
                    <field name="working_hours" widget="float_time"/>
                    <field name="extra"/>
                    <field name="checkin_location"/>
                    <field name="checkout_location"/>
                    <field name="is_late"/>
                    <field name="is_checkin"/>
                    <fiel dname="day"/>

                </group>
            </sheet>
        </form>
    </field>
</record>
<!--kanban-->
<record id="emdad_hr_view_kanban" model="ir.ui.view">
    <field name="name">emdad_hr.view.kanban</field>
    <field name="model">emdad.hr</field>
    <field name="arch" type="xml">
       <kanban>
                <t t-name="kanban-box">
                    <div t-attf-class="oe_kanban_global_click">
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                            <div class="o_kanban_image">
                                <img t-att-src="kanban_image('emdad.hr', 'image', record.id.raw_value)" alt="Book"
                                    class="o_image_128_contain"/>
                            </div>
                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title">
                                <field name="name"/>
                                <br></br>
                                <i class="fa fa-id-card-o"/> Employee ID: 
                                <field name="emp_id"/>
                                </strong>
                                <br></br>
                                    <i class="fa fa-suitcase"/> Position: 
                                    <field name="position"/> <br></br>
                                    <i class="fa fa-sitemap"/> Department:
                                    <field name="department"/>  <br></br>
                                    <i class="fa fa-address-card"/> Manager:
                                    <field name="manager"/>
                            </div>
                        </div>
                    </t>
                    </div>
                    </t>
            </kanban>
    </field>
</record>
<record id="emdad_hr_contract_view_kanban" model="ir.ui.view">
    <field name="name">emdad_hr_contract.view.kanban</field>
    <field name="model">emdad.hr.contract</field>
    <field name="arch" type="xml">
        <kanban>
                <t t-name="kanban-box">
                    <div t-attf-class="oe_kanban_global_click">
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                        <div class="o_kanban_image">
                                <img src="https://i.imgur.com/NI74UMS.png" height="200px" invisible="status != 'active'"/>
                                <img src="https://i.imgur.com/LEJxW5t.png" height="200px" invisible="status != 'not'"/>
                            </div>
                            <div class="oe_kanban_details">
                                <field name="status" invisible="1"/>
                                <strong class="o_kanban_record_title">
                                <field name="name"/>
                                <br></br>
                                <field name="related_employee"/>
                                </strong>
                                <br></br>
                                    <i class="fa fa-calendar"/> Start Date: 
                                    <field name="start_date"/> <br></br>
                                    <i class="fa fa-calendar"/> End Date:
                                    <field name="end_date"/>  <br></br>
                                    <i class="fa fa-address-card"/> Position:
                                    <field name="job"/><br></br> <i class="fa fa-sitemap"/> Department:
                                    <field name="related_department"/> 
                            </div>
                        </div>
                    </t>
                    </div>
                    </t>
            </kanban>
    </field>
</record>
<record id="emdad_hr_department_view_kanban" model="ir.ui.view">
    <field name="name">emdad_hr_department.view.kanban</field>
    <field name="model">emdad.hr.department</field>
    <field name="arch" type="xml">
        <kanban>
                <t t-name="kanban-box">
                    <div t-attf-class="oe_kanban_global_click">
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title">
                                <field name="name"/>
                                <br></br>
                                </strong>
                                <br></br>
                                    <i class="fa fa-suitcase"/> Manager: 
                                    <field name="manager"/> <br></br>
                                    <i class="fa fa-sitemap"/> Parent:
                                    <field name="parent_department"/>  <br></br>
                                    <i class="fa fa-users"/> Employees:
                                    <field name="number_of_employees"/>
                            </div>
                        </div>
                    </t>
                    </div>
                    </t>
            </kanban>
    </field>
</record>
